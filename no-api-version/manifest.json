{
  "manifest_version": 2,
  "name": "CSFloat price to Buff price",
  "version": "1.0",
  "description": "Check price of any CSFloat offers on Buff163.",
  "permissions": [
    "activeTab",
    "https://csfloat.com/",
    "https://api.steaminventoryhelper.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://csfloat.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://api.steaminventoryhelper.com/*"
    ]
  }
}
